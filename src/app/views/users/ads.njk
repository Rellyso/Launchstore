{% extends "layout.njk" %}

{% import "parts/cards.njk" as cards %}

{% block content %}

{% call cards.render('Meus An√∫ncios', 'user-ads container') %}
    <div class="items">
        {% for product in products %}
        <div class="item">
            <div class="image"
                style="background-image: url({{ product.img }})"
            >
            </div>

            <div class="info">
                <div class="title">{{product.name}}</div>
                <div class="title">{{product.formattedPrice}}</div>
                <div class="title">{{product.formattedCreatedAt}}</div>
            </div>

            <div class="actions">
                <a href="/products/{{ product.id }}/edit">Editar</a>
                <a href="/products/{{ product.id }}">Ver</a>
            </div>
        </div>
        {% endfor %}
    </div>
{% endcall %}
    
{% endblock content %}